# Deployment Dockerfile with gcloud CLI
FROM google/cloud-sdk:alpine

# Install necessary tools
RUN apk add --no-cache tar

# Set working directory
WORKDIR /workspace

# Copy project files
COPY . .

# Set environment variables (will be overridden at runtime)
ENV PROJECT_ID=gen-lang-client-0830629645
ENV REGION=asia-northeast1
ENV SERVICE_NAME=live2d-lipsync
ENV GOOGLE_TTS_API_KEY=""

# Default command
CMD ["/bin/sh"]
